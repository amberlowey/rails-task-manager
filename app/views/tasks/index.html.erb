<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li class="no-bullets">
      <ul class="list-inline">
        <li class="list-inline-item checkbox">
          <% if task.completed %>
            <i class="far fa-check-square"></i>
          <% else %>
            <i class="far fa-square"></i>
          <% end %>
        </li>
        <li class="list-inline-item"><%= link_to task.title, show_path(task) %></li>
        <li class="list-inline-item"><%= link_to show_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" } do %>
              <i class="fas fa-trash-alt"></i>
              <% end %>
            </li>
      </ul>
    </li>
  <% end %>
</ul>
